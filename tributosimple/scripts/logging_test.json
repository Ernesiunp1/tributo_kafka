{
  "version": 1,
  "loggers": {
    "root": {
      "handlers": ["console"],
      "level": "INFO"
    },
    "anfler": {
      "propagate": false,
      "handlers": ["console", "file"],
      "level": "INFO"
    },
    "anfler.kafka.producer": {
      "propagate": false,
      "handlers": ["console", "file"],
      "level": "INFO"
    },
    "kafka": {
      "propagate": false,
      "handlers": ["console", "file"],
      "level": "WARN"
    },
    "sqlalchemy.engine": {
        "propagate": false,
        "handlers": ["console", "file"],
        "level": "WARN"
      }
  },
  "formatters": {
    "basic": {
      "class": "logging.Formatter",
      "datefmt":"%Y-%m-%d %H:%M:%S",
      "format": "%(asctime)s.%(msecs)03d %(levelname)s %(module)s - %(funcName)s: %(message)s"
    },
    "raw": {
      "class": "logging.Formatter",
      "format": "%(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "basic"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "basic",
      "filename": "send_message.log",

      "backupCount": 10,
      "maxBytes": 10485760
    }
  }
}